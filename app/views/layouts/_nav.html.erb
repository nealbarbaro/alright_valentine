<ul class="title-area">
  <li class="name">
    <h1><%= link_to "Alright Valentine", root_path %></a></h1>
  </li>
</ul>

<section class="top-bar-section">
  <ul class="right">
    <li class="divider"></li>
    <% if current_user %>
      <li><%= link_to "Your Profile", user_path(current_user.id) %></li>
      <li><%= link_to "Your Messages", messages_path %></li>
      <li><%= link_to "Logged in: #{current_user.email}", edit_user_path(current_user.id) %></li>
      <li class="divider"></li>
      <li><%= link_to "Logout", :logout %></li>
    <% else %>
      <li><%= link_to "Register", new_user_path, :remote => true, :data => {"reveal-id" => "signup_window"} %></li>
      <li class="divider"></li>
      <li><%= link_to "Login", :login, :remote => true, :data => {"reveal-id" => "login_window"} %></li>
    <% end %>
  </ul>
</div>